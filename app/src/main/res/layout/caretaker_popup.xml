<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    android:orientation="vertical">

    <TextView

        android:id="@+id/heading_text"
        style="@style/simpletextHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/SelectCaretaker" />


    <EditText
        android:id="@+id/search_ed"
        style="@style/edittextemail"
        android:layout_width="match_parent"
        android:layout_below="@+id/heading_text"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/border"
        android:hint="@string/Search"
        android:padding="@dimen/_5sdp" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/list_crop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/done_addpopup"
        android:layout_below="@+id/search_ed"
        android:layout_marginTop="@dimen/_2sdp"
        android:scrollbars="none" />

    <Button
        android:id="@+id/done_addpopup"
        style="@style/buttontext"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/btn_bg"
        android:text="@string/Done" />


</RelativeLayout>