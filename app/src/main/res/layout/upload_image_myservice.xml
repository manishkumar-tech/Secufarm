<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/ColorPrimary">

        <ImageView
            android:id="@+id/backBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/MyServices"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OTP" />

                <EditText
                    android:id="@+id/otp_ed"
                    style="@style/edittextmobileno_sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterOTP"
                    android:maxLength="6"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PanNumber" />

                <EditText
                    android:id="@+id/panNo"
                    style="@style/edittextsimple_sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterPAN"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AadharNumber" />

                <EditText
                    android:id="@+id/aadhar_no"
                    style="@style/edittextmobileno_sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterAadharNumber"
                    android:maxLength="12"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AccountType" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/self_radio"
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Self" />

                    <RadioButton
                        android:id="@+id/other_radio"
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Other" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/other_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HolderRelation" />

                <Spinner
                    android:id="@+id/relation_spinner"
                    style="@style/edittextsimple_sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AccountHolderName" />

                <EditText
                    android:id="@+id/holder_name_ed"
                    style="@style/edittextsimple_sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterAccountHolderName"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BankName" />

                <EditText
                    android:id="@+id/bank_name_ed"
                    style="@style/edittextsimple_sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterBankName"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AccountNumber" />

                <EditText
                    android:id="@+id/account_number_ed"
                    style="@style/edittextmobileno_sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterAccountNumber"
                    android:inputType="phone"
                    android:maxLength="16"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/IFSCCode" />

                <EditText
                    android:id="@+id/ifsc_code_ed"
                    style="@style/edittextsimple_sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterIFSCCode"
                    android:inputType="text"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OwnedorRentedLand" />

                <Spinner
                    android:id="@+id/owned_rented_spinner"
                    style="@style/edittextemail"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/VillageName" />

                <EditText
                    android:id="@+id/villagename"
                    style="@style/edittextemail"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterVillageName"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BlockName" />

                <EditText
                    android:id="@+id/blockname"
                    style="@style/edittextemail"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterBlockName"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/District" />

                <EditText
                    android:id="@+id/districtname"
                    style="@style/edittextemail"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/design_layouts"
                    android:hint="@string/EnterDistrict"
                    android:paddingLeft="@dimen/_5sdp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/FarmerImage" />

                    <ImageView
                        android:id="@+id/farmer_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/design_layouts"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/icon_cameragray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PanCardImage" />

                    <ImageView
                        android:id="@+id/pancard_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/design_layouts"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/icon_cameragray" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BankPassbookImage" />

                    <ImageView
                        android:id="@+id/bankpassbook_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/design_layouts"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/icon_cameragray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/OtherImage" />

                    <ImageView
                        android:id="@+id/other_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/design_layouts"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/icon_cameragray" />

                </LinearLayout>

            </LinearLayout>

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

          
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/submitBTN"
        style="@style/buttontext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/btn_bg"
        android:text="@string/Submit" />

</LinearLayout>