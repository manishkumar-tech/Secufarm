                    <ImageView
                        android:id="@+id/imge_state_refresh"
                        android:layout_width="@dimen/mainheading_x5"
                        android:layout_height="@dimen/mainheading_x5"
                        android:layout_marginRight="@dimen/Question_x3"
                        android:background="@drawable/icon_refresh" />
                </TableRow>

                <TableRow
                    android:layout_width="@dimen/_170sdp"
                    android:background="@drawable/line">

                    <Spinner
                        android:id="@+id/spin_state"
                        style="@style/edittextnormal_l"
                        android:layout_width="match_parent" />
                </TableRow>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/Margin_x2"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_DistrictName"
                    style="@style/simpletextQuestBlack_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/DistrictName" />

                <TableRow
                    android:layout_width="@dimen/_170sdp"
                    android:background="@drawable/line">

                    <Spinner
                        android:id="@+id/spin_district"
                        style="@style/edittextnormal_l"
                        android:layout_width="match_parent" />
                </TableRow>
            </TableRow>

            <TableRow
