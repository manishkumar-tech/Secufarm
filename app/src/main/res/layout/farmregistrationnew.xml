                    style="@style/simpletextQuestBlack_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/SowingDate" />

                <TextView
                    android:id="@+id/txt_SowingDate"
                    style="@style/edittextnormal_l"
                    android:layout_width="@dimen/_170sdp"
                    android:background="@drawable/line" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Question_x3"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_AccountType"
                    style="@style/simpletextQuestBlack_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AccountType" />

                <RadioGroup
                    android:id="@+id/radiogroup_aacounttype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/Margin_x2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/Self"
                        android:textSize="@dimen/Question_x3" />

                    <RadioButton
                        android:id="@+id/radio_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Question_x3"
