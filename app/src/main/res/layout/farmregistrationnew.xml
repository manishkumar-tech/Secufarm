                            style="@style/edittextnormal_l"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/Question_x3"
                            android:gravity="center"
