                        android:id="@+id/edit_BranchName"
                        style="@style/edittextnormal_l"
                        android:layout_width="@dimen/_170sdp"
                        android:background="@drawable/line"
                        android:hint="@string/EnterBranchName" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/Margin_x2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_AccountNumber"
                        style="@style/simpletextQuestBlack_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".3"
                        android:text="@string/AccountNumber" />


                    <EditText
                        android:id="@+id/edit_AccountNumber"
                        style="@style/edittextmobileno_l"
                        android:layout_width="@dimen/_170sdp"
                        android:background="@drawable/line"
                        android:hint="@string/EnterAccountNumber"
