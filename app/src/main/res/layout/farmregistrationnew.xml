                        android:textSize="@dimen/Question_x3" />

                </RadioGroup>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/Margin_x2"
