<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary">

        <TextView
            android:id="@+id/title"
            style="@style/simpletextHeadingwhite_x3"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_cross"
            android:layout_width="@dimen/mainheading_x3"
            android:layout_height="@dimen/mainheading_x3"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/Question_x3"
            android:background="@drawable/cross_btn" />
    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageview"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/Question_x3"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txt_Mangtitle"
                style="@style/simpletextQuestBlack_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/mainheading_x5"
                android:paddingRight="@dimen/mainheading_x5"
                android:text="@string/Management" />

            <TextView
                android:id="@+id/txt_management"
                style="@style/simpletextQuestGray_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Margin_x2"
                android:paddingLeft="@dimen/mainheading_x5"
                android:paddingRight="@dimen/mainheading_x5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainheading_x5" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>