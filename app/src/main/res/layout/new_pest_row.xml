<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Margin_x2"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/Margin_x2"
        app:cardElevation="@dimen/Margin_x5"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/farm_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Question_x3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/Margin_x2">

                    <TextView
                        android:id="@+id/name"
                        style="@style/simpletextQuestBlack_l"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/Margin_x2"
                        android:text="" />

                    <ImageView
                        android:id="@+id/imgeview_details"
                        android:layout_width="@dimen/mainheading_x5"
                        android:layout_height="@dimen/mainheading_x5"
                        android:background="@drawable/nextbtn"
                        android:scaleType="fitXY" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/Margin_x5">

                    <TextView
                        android:id="@+id/value"
                        style="@style/simpletextQuestGray_s"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/Margin_x2"
                        android:paddingRight="@dimen/Margin_x2" />

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:scaleType="fitXY" />
                </TableRow>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>