<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/line">

                <Spinner
                    android:id="@+id/nutritionCrop"
                    style="@style/edittextemail_sdp"
                    android:layout_width="match_parent" />
            </TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05" />

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/line">

                <Spinner
                    android:id="@+id/nutritionSeason"
                    style="@style/edittextemail_sdp"
                    android:layout_width="match_parent" />
            </TableRow>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/line">

                <Spinner
                    android:id="@+id/nutritionSoil"
                    style="@style/edittextemail_sdp"
                    android:layout_width="match_parent" />
            </TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05" />

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/line">

                <Spinner
                    android:id="@+id/nutritionIrrigation"
                    style="@style/edittextemail_sdp"
                    android:layout_width="match_parent" />
            </TableRow>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/line">

                <Spinner
                    android:id="@+id/nutritionStatus"
                    style="@style/edittextemail_sdp"
                    android:layout_width="match_parent" />
            </TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05" />

            <Button
                android:id="@+id/nutritionSubmit"
                style="@style/buttontext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="@string/Submit" />

        </TableRow>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nutrition_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:scrollbars="vertical" />

    </LinearLayout>


</FrameLayout>
