<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/black"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/farm_name"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Farm name"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/farmer_name"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Farmer name"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/mobile_no"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Phone No"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/vendor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Vendor"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/agronomist"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Agronomist"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/farm_area"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Farm Area"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/acreage"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Acreage"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/seed_issue"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Seed Issues(Bags)"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/seed_ratio"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Seed/Acer Ratio"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/germination_tv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Germination(%)"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/sowing_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="Sowing Date"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/ndvi_value"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="NDVI"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/ndvi_status"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:padding="2dp"
                    android:text="NDVI Status"
                    android:textColor="#ffffff" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/moisture_value"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="SM"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="#e4e2e2" />

                <TextView
                    android:id="@+id/moisture_status"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="SM Status"
                    android:textColor="#ffffff" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_overall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card"

                android:padding="5dp" />

            <TextView
                android:id="@+id/nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="No data found"
                android:textColor="@color/red_alret"
                android:textSize="25dp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>
    </HorizontalScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/searc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_search" />
</RelativeLayout>