<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/Margin_x2"
        android:elevation="@dimen/Margin_x4"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/Margin_x2">

        <LinearLayout
            android:id="@+id/message_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Margin_x2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Margin_x2"
                android:layout_marginTop="@dimen/Margin_x2"
                android:layout_marginRight="@dimen/Margin_x2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message"
                    style="@style/simpletextQuestGray_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/User" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Margin_x2"
                android:layout_marginRight="@dimen/Margin_x2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_time"
                    style="@style/simpletextQuestBlack_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/status"
                    style="@style/simpletextQuestBlack_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="a" />
            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/Margin_x2"
        android:layout_marginRight="@dimen/Margin_x2"
        android:layout_marginBottom="@dimen/Margin_x5"
        android:layout_marginTop="@dimen/Margin_x5"
        android:background="@color/gray" />
</LinearLayout>