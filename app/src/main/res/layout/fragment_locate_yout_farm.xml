                        android:layout_width="match_parent" />
                </TableRow>


                <LinearLayout
                    android:id="@+id/ll_OtherDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/OthersubDistrict_n"
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/OtherDistrict" />

                    <EditText
                        android:id="@+id/OthersubDistrict_edt"
                        style="@style/edittextsimple_sdp"
                        android:layout_width="match_parent"
                        android:background="@drawable/line"
                        android:hint="@string/OtherDistrict"
                        android:padding="@dimen/_5sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/VillageName_n"
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/VillageName" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line">

                    <com.weather.risk.mfi.myfarminfo.activities.CustomSearchableSpinner
                        android:id="@+id/VillageName_spin"
                        style="@style/edittextemail_sdp"
                        android:layout_width="match_parent" />
                </TableRow>

                <LinearLayout
                    android:id="@+id/ll_OtherVillageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/OtherVillageName_n"
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/OtherVillageName" />

                    <EditText
                        android:id="@+id/OtherVillageName_edt"
                        style="@style/edittextsimple_sdp"
                        android:layout_width="match_parent"
                        android:background="@drawable/line"
                        android:hint="@string/OtherVillageName"
                        android:padding="@dimen/_5sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tagged_f_a"
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/TaggedFarmArea" />

                <EditText
                    android:id="@+id/plot_area"
                    style="@style/edittextdecimal"
                    android:layout_width="match_parent"
                    android:background="@drawable/line"
                    android:clickable="false"
                    android:editable="false"
                    android:hint="@string/Area"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:padding="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/actual_f"
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/ActualFarmArea" />

                <EditText
                    android:id="@+id/farm_area"
                    style="@style/edittextdecimal"
                    android:layout_width="match_parent"
                    android:background="@drawable/line"
                    android:hint="@string/EnterFarmArea"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:padding="@dimen/_5sdp" />

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/crop1"
                        style="@style/buttontext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/line"
                        android:text="@string/Crop1"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/crop2"
                        style="@style/buttontext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/line"
                        android:text="@string/Crop2"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/crop3"
                        style="@style/buttontext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/line"
                        android:text="@string/Crop3"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/crop4"
                        style="@style/buttontext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/line"
                        android:text="@string/Crop4"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/crop_t"
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/Crop" />

                    <ImageView
                        android:id="@+id/imge_crop_refresh"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/icon_refresh" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line">

                    <com.weather.risk.mfi.myfarminfo.activities.CustomSearchableSpinner
                        android:id="@+id/crop"
                        style="@style/edittextemail_sdp"
                        android:layout_width="match_parent" />
                </TableRow>


                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/variety_t"
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Variety" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line">

                    <com.weather.risk.mfi.myfarminfo.activities.CustomSearchableSpinner
                        android:id="@+id/variety"
                        style="@style/edittextemail_sdp"
                        android:layout_width="match_parent" />
                </TableRow>


                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/sow_p"
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/SowPeriodFrom" />

                <TextView
                    android:id="@+id/editTextShowPeriodFrom"
                    style="@style/edittextemail_sdp"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/line"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:padding="@dimen/_5sdp" />


                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/sow_p_t"
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/SowPeriodTo" />

                <TextView
                    android:id="@+id/editTextShowPeriodTo"
                    style="@style/edittextemail_sdp"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/line"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:padding="@dimen/_5sdp" />

                <LinearLayout
                    android:id="@+id/ll_noofbags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp" />

                    <TextView
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/NoofBags" />

                    <EditText
                        android:id="@+id/edtnoofbags"
                        style="@style/edittextmobileno"
                        android:layout_width="match_parent"
                        android:background="@drawable/line"
                        android:hint="@string/NoofBags"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:padding="@dimen/_5sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_IBFarmerCode"
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/IBFarmerCode" />

                <EditText
                    android:id="@+id/edt_IBFarmerCode"
                    style="@style/edittextsimple_sdp"
                    android:layout_width="match_parent"
                    android:background="@drawable/line"
                    android:hint="@string/IBFarmerCode"
                    android:maxLength="10"
                    android:padding="@dimen/_5sdp" />

                              <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/have_y"
                    style="@style/simpletextQuestion_sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/HaveYouapplied" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line">

                    <Spinner
                        android:id="@+id/basalDose"
                        style="@style/edittextemail_sdp"
                        android:layout_width="match_parent" />
                </TableRow>


                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp" />


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/fillBasalDose"
                        style="@style/simpletextQuestion_sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/Pleasefillbasal" />

                    <android.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/N"
                            style="@style/simpletextQuestion_sdp"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
