<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/hhhh"
        android:layout_below="@+id/cancel_popup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="6"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/date_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:padding="2dp"
            android:text="Date"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/un_selected_button_background"/>

        <TextView
            android:id="@+id/maxTemp_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:padding="2dp"
            android:text="MaxTemp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/un_selected_button_background"/>

        <TextView
            android:id="@+id/minTemp_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:padding="2dp"
            android:text="MinTemp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/un_selected_button_background"/>
        <TextView
            android:id="@+id/rain_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:padding="2dp"
            android:text="Rain"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/un_selected_button_background"/>
        <TextView
            android:id="@+id/humidity_mor_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:padding="2dp"
            android:text="HumidityMor"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/un_selected_button_background"/>

        <TextView
            android:id="@+id/humidity_eve_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:padding="2dp"
            android:text="HumidityEve"/>

    </LinearLayout>

</LinearLayout>