<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ColorPrimary">

            <TextView
                android:id="@+id/title"
                style="@style/simpletextHeadingwhite_x3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/SelectCattle" />

            <Button
                android:id="@+id/btn_cross"
                android:layout_width="@dimen/mainheading_x3"
                android:layout_height="@dimen/mainheading_x3"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/Question_x3"
                android:background="@drawable/cross_btn" />
        </TableRow>

        <TextView
            android:id="@+id/txt_Pleaseselectyour"
            style="@style/simpletextQuestBlack_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Question_x3"
            android:layout_marginTop="@dimen/mainheading_x5"
            android:layout_marginRight="@dimen/Question_x3"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/PleaseselectCattleName" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Question_x3"
            android:layout_weight="1"
            android:background="@drawable/border">

            <com.weather.risk.mfi.myfarminfo.activities.CustomSearchableSpinner
                android:id="@+id/spinselectcattlefarmer"
                style="@style/edittextemail_sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainheading_xl6" />

        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mainheading_x5" />
    </LinearLayout>
</layout>