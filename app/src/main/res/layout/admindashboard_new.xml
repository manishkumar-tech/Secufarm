<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_bg"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview_logout"
                android:layout_width="@dimen/mainheading_x3"
                android:layout_height="@dimen/mainheading_x3"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/mainheading_x3"
                android:layout_marginRight="@dimen/mainheading_x3"
                android:background="@drawable/ic_logout" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardviewlanguage"
                android:layout_width="@dimen/mainheading_x3"
                android:layout_height="@dimen/mainheading_x3"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/mainheading_x3"
                android:layout_marginRight="@dimen/mainheading_x3"
                android:background="@drawable/language_icon" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/mainheading_xl1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/heading_x4"
                    android:layout_marginRight="@dimen/heading_x4"
                    android:layout_marginBottom="@dimen/heading_x4"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_FarmerDashbaord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/whitetransparent"
                        app:cardCornerRadius="@dimen/Margin_x2"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_cardview"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/Question_x3" />

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:paddingLeft="@dimen/Question_x3"
                                android:paddingRight="@dimen/Question_x3">

                                <ImageView
                                    android:id="@+id/imgvw_FarmerDashbaord"
                                    android:layout_width="@dimen/mainheading_x3"
                                    android:layout_height="@dimen/mainheading_x3"
                                    android:layout_gravity="center"
                                    android:background="@drawable/farmer_icon"
                                    android:backgroundTint="@color/ColorPrimary"
                                    android:gravity="center"
                                    android:tint="@color/ColorPrimary" />

                                <TextView
                                    android:id="@+id/txt_FarmerDashbaord"
                                    style="@style/simpletextHeadingblack_x2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:paddingLeft="@dimen/Question_x3"
                                    android:text="@string/FarmerDashbaord" />

                                <ImageView
                                    android:id="@+id/imgvw_FarmerDashbaords"
                                    android:layout_width="@dimen/heading_x4"
                                    android:layout_height="@dimen/heading_x4"
                                    android:layout_gravity="center"
                                    android:background="@drawable/icon_next"
                                    android:gravity="center" />
                            </TableRow>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/Question_x3" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_cattleDashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/whitetransparent"
                        app:cardCornerRadius="@dimen/Margin_x2"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_cardview"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/Question_x3" />

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:paddingLeft="@dimen/Question_x3"
                                android:paddingRight="@dimen/Question_x3">


                                <ImageView
                                    android:id="@+id/imgvw_CattleDashbaord"
                                    android:layout_width="@dimen/mainheading_x3"
                                    android:layout_height="@dimen/mainheading_x3"
                                    android:layout_gravity="center"
                                    android:background="@drawable/farmer_icon"
                                    android:backgroundTint="@color/ColorPrimary"
                                    android:gravity="center"
                                    android:tint="@color/ColorPrimary" />

                                <TextView
                                    android:id="@+id/txt_CattleDashbaord"
                                    style="@style/simpletextHeadingblack_x2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:paddingLeft="@dimen/Question_x3"
                                    android:text="@string/CattleDashbaord" />

                                <ImageView
                                    android:id="@+id/imgvw_CattleDashbaords"
                                    android:layout_width="@dimen/heading_x4"
                                    android:layout_height="@dimen/heading_x4"
                                    android:layout_gravity="center"
                                    android:background="@drawable/icon_next"
                                    android:gravity="center" />
                            </TableRow>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/Question_x3" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>
</layout>