<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/hhhh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/cancel_popup"
        android:layout_margin="@dimen/Margin_x2"
        android:background="@color/gray"
        android:elevation="@dimen/Margin_x4"
        app:cardCornerRadius="@dimen/Margin_x2">

        <TableRow
            android:id="@+id/package_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/Margin_x2">

            <TextView
                android:id="@+id/title_show"
                style="@style/simpletextQuestBlack_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/Margin_x2"
                android:layout_toLeftOf="@+id/done_btn"
                android:layout_weight="1"
                android:text="@string/Square" />

            <TextView
                android:id="@+id/done_btn"
                style="@style/buttontext_m"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mainheading_x1"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/Margin_x2"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:minWidth="@dimen/_90sdp"
                android:text="@string/Done" />

            <TextView
                android:id="@+id/imageupload_btn"
                style="@style/buttontext_m"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mainheading_x1"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/Margin_x2"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:minWidth="@dimen/_90sdp"
                android:text="@string/UploadImage"
                android:visibility="gone" />

        </TableRow>


    </androidx.cardview.widget.CardView>

</LinearLayout>