<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:minHeight="@dimen/_140sdp"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary">

        <TextView
            android:id="@+id/txt_title"
            style="@style/simpletextHeadingwhite_x1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:text="@string/CHANNEL_NAME" />

        <Button
            android:id="@+id/btn_cross"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/cross_btn" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary">

        <TextView
            android:id="@+id/txtDateTime"
            style="@style/GridTextStyleSmall"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/ColorPrimary"
            android:gravity="right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/_5sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSMS"
            style="@style/GridTextStyleSmall"
            android:layout_width="match_parent"
            android:gravity="left"
            android:padding="@dimen/_10sdp"
            android:text=""
            android:textSize="@dimen/_12sdp" />
    </TableRow>
    <LinearLayout
        android:id="@+id/image_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/image_lay1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/txt_closeup"
                    style="@style/buttontext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:text="@string/CloseUp"
                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/choose_image1"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/image_upload_icon"
                    android:scaleType="fitXY" />

                <Button
                    android:id="@+id/imageupload1"
                    style="@style/buttontext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/Upload"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_lay2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/txt_farm"
                    style="@style/buttontext"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:text="@string/Farm"
                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/choose_image2"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/image_upload_icon"
                    android:scaleType="fitXY" />

                <Button
                    android:id="@+id/imageupload2"
                    style="@style/buttontext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/Upload"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
        </TableRow>


        <Button
            android:id="@+id/submit_image_btn"
            style="@style/buttontext"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/btn_bg"
            android:padding="@dimen/_5sdp"
            android:text="@string/Submit"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TableRow
        android:id="@+id/tblrw_canyes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="@string/No"
            android:textStyle="bold"
            android:textColor="@color/orange" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_yes"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="@string/Yes"
            android:textColor="@color/ColorPrimary"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1" />

    </TableRow>

</LinearLayout>