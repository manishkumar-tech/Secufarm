                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/Margin_x5"
                                android:text="@string/Urea"
                                android:textColor="@color/white"
