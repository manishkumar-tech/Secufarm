                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@drawable/admin_icon"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txt_PlotSize"
                            style="@style/simpletextQuestionAnswer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/PlotSize"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <TableRow
                        style="@style/simpletextHeading_sdp"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_20sdp"
                        android:layout_weight="2"
                        android:background="@drawable/gray_bg"
                        android:gravity="center"
                        android:text="@string/PlotSize">

                        <EditText
                            android:id="@+id/txt_PlotSizeValue"
                            style="@style/edittextdecimal_sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:text="0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/txt_PlotSizeValueUnit"
                            style="@style/simpletextQuestionverysmallblack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="@string/acre" />
                    </TableRow>
