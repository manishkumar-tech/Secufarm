                                android:layout_height="match_parent"
                                android:background="@color/secondary_black" />

                            <TextView
                                android:id="@+id/txt_UreaSPPMOP_SSPBags"
                                style="@style/edittextnormal_l"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/Margin_x5"
                                android:text="0 Bags" />

                            <View
                                android:layout_width="@dimen/Margin_x6"
                                android:layout_height="match_parent"
                                android:background="@color/secondary_black" />

                            <TextView
                                android:id="@+id/txt_UreaSPPMOP_MOPBags"
                                style="@style/edittextnormal_l"
