                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/Margin_x5"
                                android:text="@string/DAP"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="@dimen/Margin_x6"
                                android:layout_height="match_parent"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/txt_DAPMOPUrea_MOP"
                                style="@style/edittextnormal_l"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/Margin_x5"
                                android:text="@string/MOP"
                                android:textColor="@color/white"
                                android:textStyle="bold" />


                            <View
                                android:layout_width="@dimen/Margin_x6"
                                android:layout_height="match_parent"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/txt_DAPMOPUrea__Urea"
                                style="@style/edittextnormal_l"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/Margin_x5"
                                android:text="@string/Urea"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="@dimen/Margin_x6"
                                android:layout_height="match_parent"
                                android:background="@color/black" />


                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/Margin_x6"
                            android:background="@color/black" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/mainheading_xl6">

                            <TextView
                                android:id="@+id/txt_DAPMOPUrea_DAPkg"
                                style="@style/edittextnormal_l"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/Margin_x5"
                                android:text="0 kg" />

                            <View
                                android:layout_width="@dimen/Margin_x6"
                                android:layout_height="match_parent"
