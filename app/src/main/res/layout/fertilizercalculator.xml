                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/Margin_x5"
                                android:text="0 Bags" />

                            <View
                                android:layout_width="@dimen/Margin_x6"
                                android:layout_height="match_parent"
                                android:background="@color/secondary_black" />


                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/Margin_x6"
                            android:background="@color/secondary_black" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_DAPMOPUrea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/borderline"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/Margin_x6"
                            android:background="@color/black" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/mainheading_xl5"
                            android:background="@color/ColorPrimary">

                            <View
