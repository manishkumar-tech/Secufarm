<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eaf4f2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:elevation="@dimen/_3sdp"
        card_view:cardBackgroundColor="@color/green_alert"
        card_view:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:id="@+id/message_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/simpletextQuestion_sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/User"
                android:textColor="@color/red_alret" />


            <TextView
                android:id="@+id/message"
                style="@style/simpletextQuestionsmall_sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>