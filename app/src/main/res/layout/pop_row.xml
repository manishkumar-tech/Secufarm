<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Margin_x2"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/Margin_x2"
        app:cardElevation="@dimen/Margin_x5"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ttl"
                style="@style/simpletextQuestBlack_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:padding="@dimen/Margin_x2"
                android:text="" />

            <TextView
                android:id="@+id/vl"
                style="@style/simpletextQuestGray_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvPrice"
                android:gravity="start"
                android:padding="@dimen/Margin_x2"
                android:text="" />

            <TextView
                android:id="@+id/imageupload_btn"
                style="@style/buttontext_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/Margin_x2"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:minWidth="@dimen/_80sdp"
                android:padding="@dimen/Margin_x2"
                android:text="@string/Submit" />

            <TextView
                android:id="@+id/done_btn"
                style="@style/buttontext_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:minWidth="80dp"
                android:minHeight="@dimen/mainheading_x3"
                android:padding="@dimen/Margin_x2"
                android:text="@string/Done"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                android:visibility="gone" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>