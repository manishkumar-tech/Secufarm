<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ttttt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp">

        <View
            android:id="@+id/a12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/dsaas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/a12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/future_id"

                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="2dp"
                android:text="ID."
                android:textColor="@color/black"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/state_id_future"
                android:layout_width="90dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="2dp"
                android:text="State ID"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />


            <TextView
                android:id="@+id/state_name_future"
                android:layout_width="180dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="2dp"
                android:text="State Name"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/crop_name_future"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Crop Name"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/crop_id_future"
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="2dp"
                android:text="Crop ID"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/variety_future"
                android:layout_width="180dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="2dp"
                android:text="Variety"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/month"
                android:layout_width="90sp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="2dp"
                android:text="Month"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/year"
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Year"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/price_from"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Price From"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/price_to"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Price To"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/dsaas"
            android:background="@color/gray" />

    </RelativeLayout>


</LinearLayout>