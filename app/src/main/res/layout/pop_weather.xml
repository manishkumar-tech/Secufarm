<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ttttt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/ColorPrimary">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/back_btn" />

            <TextView
                android:id="@+id/title"
                style="@style/simpletextHeadingwhite_x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="" />

            <TextView
                android:id="@+id/view_ndvi"
                style="@style/simpletextQuestBlack_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/Margin_x2"
                android:background="@drawable/white_bg"
                android:padding="@dimen/Margin_x2"
                android:text="@string/ViewNDVI"
                android:visibility="gone" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ttttt"
            android:layout_margin="@dimen/Margin_x5"
            android:background="@color/gray"
            android:scrollbars="vertical" />


    </RelativeLayout>


</LinearLayout>