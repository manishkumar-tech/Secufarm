<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/Margin_x2">

            <TextView
                android:id="@+id/txt_title"
                style="@style/simpletextQuestBlack_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/Margin_x2"
                android:text="" />

            <TextView
                android:id="@+id/txt_value"
                style="@style/simpletextQuestBlack_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="@dimen/Margin_x2"
                android:paddingLeft="@dimen/Margin_x2"
                android:paddingBottom="@dimen/Margin_x2"
                android:text="" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/Margin_x2"
            android:layout_marginTop="@dimen/Margin_x2"
            android:layout_marginRight="@dimen/Margin_x2"
            android:background="@color/white" />
    </LinearLayout>


</LinearLayout>
