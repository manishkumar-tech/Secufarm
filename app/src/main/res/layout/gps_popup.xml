<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/simpletextHeadingwhite_x1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_1sdp"
        android:background="@color/ColorPrimary"
        android:gravity="center"
        android:text="@string/EnableGPS"
        android:textAllCaps="true"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/_50sdp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtsms"
            style="@style/simpletextQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:text="@string/GPSOFF"
            android:textStyle="normal" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1" />

            <Button
                android:id="@+id/btnoff"
                style="@style/buttontext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_backgroundred"
                android:stateListAnimator="@null"
                android:text="@string/OFF" />


            <TextView
                android:id="@+id/txtblank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1" />

            <Button
                android:id="@+id/btnon"
                style="@style/buttontext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:stateListAnimator="@null"
                android:text="@string/ON" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1" />
        </TableRow>


    </LinearLayout>
</LinearLayout>
