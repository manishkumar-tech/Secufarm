<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ttttt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/ColorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="More Details"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/ttttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/forecast_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/disease_forecast"
                    android:padding="5dp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tv_crom_mgmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Forecast"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/weather_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/weather_forecast_icon"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tv_farm_mgmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Weather"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/plot_detail_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/plant_growth"
                    android:textColor="#fff"
                    app:civ_border_color="@color/ColorPrimary" />

                <TextView
                    android:id="@+id/tv_soil_dct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Plot Detail"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>