<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/Margin_x2"
    android:layout_marginRight="50dp"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/Margin_x2">

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/Margin_x5"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/Margin_x5"
            android:layout_marginTop="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/audio_play"
            android:layout_width="@dimen/mainheading_xl4"
            android:layout_height="@dimen/mainheading_xl5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_margin="@dimen/Margin_x5"
            android:background="@drawable/play"
            android:text="@string/Play"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_stop"
            android:layout_width="@dimen/mainheading_xl4"
            android:layout_height="@dimen/mainheading_xl5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_margin="@dimen/Margin_x5"
            android:background="@drawable/icon_stopoff"
            android:text="@string/Play"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay"
        android:layout_marginTop="@dimen/Margin_x2"
        android:background="@drawable/out_message_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/message"
            style="@style/simpletextQuestWhite_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:paddingLeft="@dimen/Margin_x2"
            android:paddingRight="@dimen/Margin_x2"
            android:paddingBottom="@dimen/Margin_x2"
            android:text=""
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/timestamp"
            style="@style/simpletextQuestWhite_xs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:paddingLeft="@dimen/Margin_x2"
            android:paddingRight="@dimen/Margin_x2"
            android:text="" />

    </LinearLayout>


</RelativeLayout>
